pipeline {
    agent{
      docker{
        image 'node:17-alpine3.12'
      }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Compiling result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
          when{
                   changeset "**/result/**"
              }
          steps {
                dir('result'){
                   sh 'npm install'
                   sh 'npm test'
                }
            }
        }           
    }
}
